<h1>Listing reviews</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Rating</th>
      <th>Date</th>
      <th>Comment</th>
      <th>Latitude</th>
      <th>Longitude</th>
      <th>Address</th>
      <th>Img url</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reviews.each do |review| %>
      <tr>
        <td><%= review.name %></td>
        <td><%= review.rating %></td>
        <td><%= review.date %></td>
        <td><%= review.comment %></td>
        <td><%= review.latitude %></td>
        <td><%= review.longitude %></td>
        <td><%= review.address %></td>
        <td><%= review.img_url %></td>
        <td><%= link_to 'Show', review %></td>
        <td><%= link_to 'Edit', edit_review_path(review) %></td>
        <td><%= link_to 'Destroy', review, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

